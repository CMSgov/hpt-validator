{
  "exclude": ["lib", "node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  }
}
